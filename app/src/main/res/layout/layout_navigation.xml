<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tdc.edu.navigation.ViewNavigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greenPrimary"
            android:gravity="center"
            android:text="MENU"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/borderprimarygreen"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnTimKiemSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tìm kiếm sản phẩm"
                    android:layout_margin="4dp"
                    android:src="@drawable/timkiemsanpham"
                    android:backgroundTint="@color/greenPrimary"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/btnHoaDon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách hóa đơn"
                    android:layout_margin="4dp"
                    android:src="@drawable/quanlyhoadon"

                    android:backgroundTint="@color/greenPrimary"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/btnBaoCao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Báo cáo"
                    android:layout_margin="4dp"
                    android:src="@drawable/baocaothongke"
                    android:backgroundTint="@color/greenPrimary"
                    android:textSize="24sp" />
                <ImageView
                    android:id="@+id/btnBaiVietTinTucSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Báo cáo"
                    android:layout_margin="4dp"
                    android:src="@drawable/baiviettintucsanpham"
                    android:backgroundTint="@color/greenPrimary"
                    android:textSize="24sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_navigation_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>